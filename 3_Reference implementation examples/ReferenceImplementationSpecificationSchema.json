{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/CIHDigitalConfigurator/CIH_Specifications_Schema/wiki",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "_t": "BH.oM.Data.Specifications.Specification",
            "Clause": "0.0.0",
            "SpecName": "Global Beam Design Philosophy",
            "Description": "",
            "FilterConditions": [],
            "CheckConditions": []
        }
    ],
    "required": [
        "Clause",
        "SpecName",
        "Description",
        "FilterConditions",
        "CheckConditions"
    ],
    "properties": {
        "Clause": {
            "$id": "#/properties/Clause",
            "type": "string",
            "title": "The Clause schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "0.0.0"
            ]
        },
        "SpecName": {
            "$id": "#/properties/SpecName",
            "type": "string",
            "title": "The SpecName schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Global Beam Design Philosophy"
            ]
        },
        "Description": {
            "$id": "#/properties/Description",
            "type": "string",
            "title": "The Description schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                ""
            ]
        },
        "FilterConditions": {
            "$id": "#/FilterConditions",
            "type": "array",
            "title": "The FilterConditions schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                []
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/FilterConditions/items"
            }
        },
        "CheckConditions": {
            "$id": "#/CheckConditions",
            "type": "array",
            "title": "The CheckConditions schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                []
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/CheckConditions/items"
            }
        }
    },
    "additionalProperties": true
}